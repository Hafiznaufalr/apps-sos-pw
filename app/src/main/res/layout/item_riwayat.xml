<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_item_lokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Lokasi : Ruang 27"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:fontFamily="@font/sbold"
        />
        <TextView
            android:id="@+id/tv_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:textSize="16sp"
            android:background="@drawable/bg_menunggu"
            android:text="menunggu"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/sreguler"
            />

    <TextView
        android:id="@+id/tv_item_date"
        android:layout_below="@id/tv_item_lokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 okt, 10:30 AM"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/sreguler"

        />
    <TextView
        android:id="@+id/tv_item_isi"
        android:layout_below="@id/tv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Monitor Rusak"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/sreguler"
        />

    </RelativeLayout>


</androidx.cardview.widget.CardView>